{
  "name": "st-universe/planet-generator",
  "description": "ST-Universe planet surface generator",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Stu\\PlanetGenerator\\": "src/PlanetGenerator"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Stu\\PlanetGenerator\\": "src/PlanetGenerator"
    }
  },
  "require": {
    "php": "^7.4||^8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "mockery/mockery": "^1.1",
    "st-universe/assets": "dev-master",
    "mnsami/composer-custom-directory-installer": "^2",
    "phpstan/phpstan": "^1.9"
  },
  "config": {
    "allow-plugins": {
      "mnsami/composer-custom-directory-installer": true
    }
  },
  "extra": {
    "installer-paths": {
      "./example/assets": [
        "st-universe/assets"
      ]
    }
  },
  "scripts": {
    "stan": "phpstan",
    "qa": [
      "@composer stan"
    ]
  },
  "scripts-descriptions": {
    "qa": "Executes alle qa related action"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:st-universe/assets.git"
    }
  ]
}
